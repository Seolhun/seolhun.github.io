{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "config/*": ["config/*"]
    },
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
  },
  "include": [
    "./src/**/*", "src/animations/.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
